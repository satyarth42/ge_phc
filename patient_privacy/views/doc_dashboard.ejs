<html>
<head>
    <title>Doctor's Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <script type="text/javascript" src="/javascripts/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="/javascripts/custom.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
</head>
<body>
<% include templates/header_auth.ejs %>
<div class="container-fluid container">
    <%data.forEach(function (item,index) {%>
        <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12" style="border:thick">

            <div class='alert alert-info col-md-8'>Patient: <%=item.patient%></div>

            <div class='alert alert-warning col-md-8'> Comment: <%=item.comments%></div>

            <img src="<%=item.images%>" height="600px" width="400px"><br><br>
            <form method="post" action="/doctor/send_reply">
                <input type="text" placeholder="Send a reply" name="reply">
                <input type="hidden" name="id" value="<%=item._id%>" class="form-control">
                <input type="Submit" value="Reply" class="btn btn-primary">
            </form>
            <br><br><br>
        </div>
    <% })%>
</div>
<script type="text/javascript">
</script>
</body>
</html>